const flowEncender = addKeyword('encender')
.addAction(async ()=> {
    STATE = true
})
.addAnswer('Bot encendido...')

const flowPrincipal = addKeyword([EVENTS.WELCOME, 'hola'])

    // Funcion para apagar el bot

    .addAction(async (_, { endFlow }) => {
        if (!STATE) return endFlow()
    })

    .addAnswer('Hola! ðŸ‘‹ Soy el chatbot de Empresa de Celulares ðŸ“±\nTu lugar de confianza para resolver los problemas de tu celular\n\nðŸ“ Nos ubicamos en Escalada 2245, Local 20, GalerÃ­a La Plata, Tigre, CP 1018\n\nðŸ•š Nuestro horario de atenciÃ³n es de 10 a 22hs, de Lunes a SÃ¡bado\n\nðŸ˜ŠðŸ’¼Â¿En quÃ© tipo de consulta puedo ayudarte hoy? \nðŸ’¬ No dudes en compartir tus inquietudes y juntos encontraremos la mejor soluciÃ³n para tu dispositivo Â¡Estamos aquÃ­ para asistirte!')

    .addAnswer('*IMPORTANTE!* En este momento te estÃ¡ atendiendo un chatbot especializado, pero quedate tranquilo que serÃ¡s atentido por MatÃ­as. Este solo es un pequeÃ±o paso para acelerar tu consulta y que tengas la mejor experiencia posible ðŸ˜Š', {
        delay: 500,
    })
    .addAnswer('âœï¸ EscribÃ­ el nÃºmero de la opciÃ³n que corresponda ðŸ”Ž\n\n1ï¸âƒ£ Problemas en mi telÃ©fono\n2ï¸âƒ£ AtenciÃ³n al gremio\n3ï¸âƒ£ Quisiera saber el estado de mi reparaciÃ³n\n4ï¸âƒ£ Info acerca de cursos', { capture: true, delay: 700 }, (ctx, { fallBack }) => {
        if (ctx.body == 1 || ctx.body == 2 || ctx.body == 3 || ctx.body == 4) {

        } else {
            return fallBack()
        }
    }, [flowTelefono, flowCliente2, flowCliente3, flowCursos])


const main = async () => {

    // Nos conectamos a Mysql
    const adapterDB = new MySQLAdapter({
        host: 'HOSTNAME',
        user: 'USER',
        database: 'DATABASE',
        password: 'CONTRASEÃ‘A',
        port: '3306',
    })

    const adapterFlow = createFlow([flowPrincipal,flowEncender])
    const adapterProvider = createProvider(BaileysProvider, {
        accountSid: process.env.ACC_SID,
        authToken: process.env.ACC_TOKEN,
        vendorNumber: process.env.ACC_VENDOR,
    })

    createBot({
        flow: adapterFlow,
        provider: adapterProvider,
        database: adapterDB,
    })

    QRPortalWeb()

}

main()
