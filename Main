const main = async () => {

    // Nos conectamos a Mysql
    const adapterDB = new MySQLAdapter({
        host: 'HostBaseDeDatos',
        user: 'UsuarioBaseDeDatos',
        database: 'NombreBaseDeDatos',
        password: 'Contrase√±aBaseDeDatos',
        port: '3306', // Puerto para conexiones MYSQL
    })

    const adapterFlow = createFlow([flowPrincipal, flowMicelular, flowOtra, flowDa√±ado, flowEstadoReparacion, flowPantalla, flowCursos, flowTienda, flowGolpe, flowMojado, flowJuan, flowMarca, flowProblema, flowHola, flowImagen])
    const adapterProvider = createProvider(MetaProvider, {
        jwtToken: 'TokenDeMeta',
        numberId: 'IdentificadorNumeroDeMeta',
        verifyToken: 'TokenDeUsuario',
        version: 'v16.0'
    })

    createBot({
        flow: adapterFlow,
        provider: adapterProvider,
        database: adapterDB,
    })

}

main()
